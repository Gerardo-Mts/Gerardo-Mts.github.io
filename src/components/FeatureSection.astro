---
import Button from "./Button.astro";
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";
import H2 from "./H2.astro";

type Props = {
    heading?: string;
    imageSrc: ImageMetadata;
    imageDescription?: string;
    htmlContent?: string;
    buttonText?: string;
};

const {
    heading = "DEFAULT HEADING",
    imageDescription = "DEFAULT ALT IMAGE CONTENT",
    imageSrc,
    htmlContent = "<p>DEFAULT HTML CONTENT<p/>",
    buttonText = "DEFAULT BUTTON TEXT",
} = Astro.props;
---

<div class="container mx-auto my-4 sm:p-4 sm:my-7">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 items-center">
        <!-- Image Section -->
        <div class="flex justify-center">
            <Image
                class="rounded-lg w-full sm:w-10/12 h-auto object-cover p-4 sm:p-0"
                src={imageSrc}
                alt={imageDescription}
            />
        </div>

        <!-- Content Section -->
        <div class="text-center md:text-left p-6">
            <H2 text={heading} />
            <div class="my-6 text-lg text-white" set:html={htmlContent} />
            <!-- <div class="mt-6 pt-4 flex justify-center">
                <Button text={buttonText} />
            </div> -->
        </div>
    </div>
</div>
