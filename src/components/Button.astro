---
type Props = {
    text: string;
    colorClass?: string; // Optional property for color class
};

const { text, colorClass = "bg-vividGreen" } = Astro.props; // Default to 'bg-customGreen'
---

<button
    class={`${colorClass} hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-full uppercase`}
>
    {text}
</button>
